generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int       @id @default(autoincrement())
  firstName        String
  lastName         String
  email            String    @unique
  password         String
  imageUrl         String?
  aboutMe          String?
  lastActiveAt     DateTime  @default(now())
  groups           Group[]   @relation("Members")
  sentMessages     Message[] @relation("Sender")
  receivedMessages Message[] @relation("Recipient")
}

model Group {
  id       Int       @id @default(autoincrement())
  name     String
  users    User[]    @relation("Members")
  messages Message[] @relation("GroupMessages")
}

model Message {
  id               Int      @id @default(autoincrement())
  text             String?
  imageUrl         String?
  createdAt        DateTime @default(now())
  sender           User     @relation("Sender", fields: [senderId], references: [id])
  senderId         Int
  recipientUserId  Int?
  recipientGroupId Int?
  recipientUser    User?    @relation("Recipient", fields: [recipientUserId], references: [id], onDelete: Cascade)
  recipientGroup   Group?   @relation("GroupMessages", fields: [recipientGroupId], references: [id], onDelete: Cascade)
}
